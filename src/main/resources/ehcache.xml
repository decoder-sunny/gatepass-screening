<?xml version="1.0" encoding="UTF-8"?>
<config xmlns='http://www.ehcache.org/v3'>

	<cache alias="getCodeValues">
		<key-type>java.lang.String</key-type>
		<value-type>java.util.List</value-type>
		<expiry>
			<ttl unit="minutes">120</ttl>
		</expiry>
		<resources>
			<heap unit="kB">10</heap>
		</resources>
	</cache>
	
	<cache alias="getInsight">
		<key-type>java.lang.Integer</key-type>
		<value-type>com.gatepass.main.model.Insights</value-type>
		<expiry>
			<ttl unit="minutes">120</ttl>
		</expiry>
		<resources>
			<heap unit="kB">10</heap>
		</resources>
	</cache>
	
	<cache alias="getEntitlementByRole">
		<key-type>java.lang.String</key-type>
		<value-type>java.util.List</value-type>
		<expiry>
			<ttl unit="minutes">120</ttl>
		</expiry>
		<resources>
			<heap unit="kB">10</heap>
		</resources>
	</cache>
	
	<cache alias="getCredentialByEmail">
		<key-type>java.lang.String</key-type>
		<value-type>com.gatepass.main.model.Credentials</value-type>
		<expiry>
			<ttl unit="minutes">15</ttl>
		</expiry>
		<resources>
			<heap unit="kB">10</heap>
		</resources>
	</cache>
	
	<cache alias="getSubSectionBySection">
		<key-type>java.lang.Integer</key-type>
			<value-type>java.util.List</value-type>
		<expiry>
			<ttl unit="minutes">30</ttl>
		</expiry>
		<resources>
			<heap unit="kB">10</heap>
		</resources>
	</cache>
	
	<cache alias="downloadFile">
		<key-type>java.lang.String</key-type>
		<expiry>
			<ttl unit="minutes">60</ttl>
		</expiry>
		<resources>
			<heap unit="kB">4000</heap>
		</resources>
	</cache>
	
</config>